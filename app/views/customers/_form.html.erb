<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <%= form_for(@customer, html: {class: "form-horizontal", id: "customer_form"}) do |f| %>
      <div class="form-group <%= error?(@customer.errors, :name) %>">
        <label class="control-label">Name<star>*</star></label>
        <%= f.text_field :name, placeholder: "Name", class: "form-control", required: true %>
        <%= print_error(@customer.errors, :name) %>
      </div>
      <div class="form-group <%= error?(@customer.errors, :reference_number) %>">
        <label class="control-label">Reference Number</label>
        <%= f.text_field :reference_number, placeholder: "Reference Number", class: "form-control"%>
        <%= print_error(@customer.errors, :reference_number) %>
      </div>
    <% end %>
  </div>
</div>
