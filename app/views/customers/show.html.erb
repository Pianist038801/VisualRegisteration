<div class="dashhead">
  <%= render partial: "partial/header", locals: { header: "Customers" } %>
  <div class="dashhead-toolbar">
    <%= link_to '<i class="fa fa-plus"></i> New'.html_safe, '', data: {toggle: 'modal', target: '#new_customer', 'new-customer-url': new_customer_path}, class: "btn btn-primary", title: "New" %>
    <%= link_to '<i class="fa fa-plus"></i> Edit'.html_safe, '', data: {toggle: 'modal', target: '#edit_customer', 'customer-url': edit_customer_path(@customer.id)}, class: "btn btn-primary", title: "Edit" %>
    <a href="<%= customers_path %>" class="btn btn-primary">Back</a>
  </div>
</div>
<hr class="m-t">

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name:</dt>
      <dd><%= @customer.name %>
      <dt>Reference Number:</dt>
      <dd><%= @customer.reference_number %>
      <dt>Company:</dt>
      <dd><%= @current_user.company.name %>
    </dd>
  </div>
</div>

<div id="new_customer" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content"></div>
  </div>
</div>

<div id="edit_customer" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content"></div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('#new_customer').on('show.bs.modal', function(e) {
      var path = $(e.relatedTarget).data('new-customer-url');
      $("#new_customer .modal-content").load(path);
    })
  });
  $(document).ready(function(){
    $('#edit_customer').on('show.bs.modal', function(e) {
      var path = $(e.relatedTarget).data('customer-url');
      $("#edit_customer .modal-content").load(path);
    })
  });
</script>