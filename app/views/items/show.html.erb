<div class="dashhead">
  <%= render partial: "partial/header", locals: { header: "Customers" } %>
  <div class="dashhead-toolbar">
    <a href="<%= new_item_path %>" class="btn btn-primary"><i class="fa fa-plus"></i> New</a>
    <a href="<%= edit_item_path(@item) %>" class="btn btn-primary"> Edit</a>
    <a href="<%= items_path %>" class="btn btn-primary">Back</a>
  </div>
</div>
<hr class="m-t">

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name:</dt>
      <dd><%= @item.name %>
      <dt>Supplier:</dt>
      <dd><%= @item.supplier %>
      <dt>Reference number:</dt>
      <dd><%= @item.reference_number %>
    </dd>
  </div>
</div>