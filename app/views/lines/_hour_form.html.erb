<div class="field col-lg-10" id="<%= SecureRandom.hex(4) %>">
  <div class="form-group col-lg-2 line-input">
    <div class='input-group date' >
      <%= text_field_tag 'hour[hours][]',nil, class: "form-control datetimepicker1 datepicker validate[required]", placeholder: "Hours" %>
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
       </span>
     </div>
  </div>
  <div class="form-group col-lg-2 line-input">
    <div class='input-group date' >
      <%= text_field_tag "hour[time_from][]",nil, class: "form-control time validate[required]", id: "time_from_input" , placeholder: "Time From" %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>
  <div class="form-group col-lg-2 line-input">
    <div class='input-group date' >
      <%= text_field_tag "hour[time_to][]",nil, class: "form-control time  validate[required]", id: "time_to_input", placeholder: "Time To" %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>
    <div class="form-group col-lg-1 line-input">
    <%= text_field_tag "hour[amount][]",nil, class: "form-control  validate[required]", id: "amount", placeholder: "Show Amount" %>
  </div>
  <div class="form-group col-lg-2 line-input">
    <%= select_tag "hour[paytype_id][]", options_for_select(option_for_select_pay_type), prompt: "Select Pay Type", class: "form-control select_controller validate[required]", id: "just_a_counter" %>
  </div>
  <div class="form-group col-lg-2 line-input">
    <%= text_field_tag "hour[description][]",nil, class: "form-control validate[required]", placeholder: "Description" %>
  </div>
  <div class="col-lg-1 form-group ">
    <a href="javascript:void(0)" class="removeIcon" onclick="removelink(this)">
    <span class="glyphicon glyphicon-remove"></span>
  </a>
  </div>
  <br>
</div>